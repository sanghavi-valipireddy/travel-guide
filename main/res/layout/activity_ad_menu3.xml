<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ibtspl.foodmanagement.Ad_menu3">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Supper"
        android:id="@+id/supper"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/s1"
        android:layout_alignRight="@+id/supper"
        android:layout_alignEnd="@+id/supper"
        android:layout_below="@+id/supper"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="item1" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/s2"
        android:layout_alignRight="@+id/s1"
        android:layout_alignEnd="@+id/s1"
        android:layout_below="@+id/s1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="item2" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/s3"
        android:layout_alignRight="@+id/s2"
        android:layout_alignEnd="@+id/s2"
        android:layout_below="@+id/s2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="item3" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/s4"
        android:layout_alignRight="@+id/s3"
        android:layout_alignEnd="@+id/s3"
        android:layout_below="@+id/s3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="item4" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit"
        android:layout_alignRight="@+id/s4"
        android:layout_alignEnd="@+id/s4"
        android:layout_below="@+id/s4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
